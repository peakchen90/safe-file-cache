{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "lib",
    "baseUrl": ".",
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}
